<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:padding="30dp"
    android:orientation="vertical"
    android:gravity="center">
<ImageView
    android:layout_width="200dp"
    android:layout_height="100dp"
    android:src="@drawable/ic_whatsapp"
    />
    <TextView
        android:fontFamily="@font/saudi"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="150dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="تواصل مع اي رقم واتساب دون الحاجة الى تسجيل الرقم على جوالك"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:background="@drawable/bk_ferfy"
android:inputType="phone"
        android:id="@+id/phone"
       android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:fontFamily="@font/saudi"
        android:hint="أدخل الرقم مع رمز الدولة  مثال (213+)"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <Button

        android:layout_width="200dp"
android:layout_marginTop="10dp"
        android:background="@drawable/bk_ferfy"
        android:layout_height="wrap_content"
        android:text="تواصل عبرى الوات ساب "
        android:textColor="@color/bk_green"
        android:fontFamily="@font/saudi"
        android:textSize="14dp"
        android:id="@+id/whatup_contacte"
        android:onClick="go_whatsUP"/>
</LinearLayout>